forces
{
    type            forceCoeffs;
    libs            (forces);
    writeControl    timeStep;
    writeInterval   1;

    writeToFile     true;
    log             true;

    patches         ("sphere1");
    rho             rhoInf;      // Indicates incompressible
    log             true;
    rhoInf          1.225;           // Required when rho = rhoInf
    liftDir         (0 0 1);
    dragDir         (1 0 0);
    CofR            (0 0 0);  // Axle midpoint on ground
    pitchAxis       (0 1 0);
    magUInf         1.36e-2;
    lRef            1;        
    Aref            0.785;        
}


